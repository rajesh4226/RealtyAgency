@model CultureCreateModel

<div class="modal" tabindex="-1" role="dialog" id="editModal">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Culture</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="frmEdit" method="post">
                    <div class="form-row">
                        <input type="hidden" asp-for="PID" />
                        <div class="required form-group col-md-12 mb-3">
                            <label asp-for="Heading"></label>
                            <input asp-for="Heading" class="form-control form-control-sm" />
                            <span asp-validation-for="Heading" class="text-danger"></span>
                        </div>
                        <div class="required form-group col-md-12 mb-3">
                            <label asp-for="Description"></label>
                            <textarea asp-for="Description" rows="8" class="form-control form-control-sm"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <div class="uplaodimage">
                                <div class="up-images">
                                    <label asp-for="ImageFile"></label>
                                    <input type="file" onchange="preview1()" asp-for="ImageFile" class="load-image form-control form-control-sm" />
                                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                                </div>
                                <div class="preview-img">

                                    <img id="frame1" src="~/@Model.ImagePath" />

                                </div>
                            </div>
                        </div>
                        <div class="required form-group col-md-12 mb-3">
                            <label asp-for="YoutubeVideoLink"></label>
                            <input asp-for="YoutubeVideoLink" class="form-control form-control-sm" />
                            <span asp-validation-for="YoutubeVideoLink" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <p id="error-msg-edit" class="text-danger"></p>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary" id="btnUpdate">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script>
    function preview1() {
        frame1.src = URL.createObjectURL(event.target.files[0]);
    }
</script>
