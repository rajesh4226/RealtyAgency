@model UserViewModel

@{
    ViewData["Title"] = "EditUser";
}
<div class="modal" tabindex="-1" role="dialog" id="editModal">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit User</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="frmEdit" method="post">
                    <div class="form-row">
                        <input type="hidden" asp-for="UserId" />
                        <div class="form-group col-md-12">
                            <label for="Id">Role</label>
                            <input type="text" class="form-control" readonly="readonly" asp-for="Name" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="required form-group col-md-6">
                            <label for="inputFirstName">First Name</label>
                            <input type="text" asp-for="FirstName" class="form-control" placeholder="First Name">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="required form-group col-md-6">
                            <label for="inputLastName">Last Name</label>
                            <input type="text" asp-for="LastName" class="form-control" placeholder="Last Name">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="required form-group col-md-6">
                            <label for="inputEmail">Email</label>
                            <input type="email" asp-for="Email" class="form-control" placeholder="example@gmail.com">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="required form-group col-md-6">
                            <label for="inputPhone">Phone</label>
                            <input type="text" asp-for="PhoneNumber" class="form-control" placeholder="Phone Number">
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="required form-group col-md-6">
                            <label for="inputAddress">Address Street</label>
                            <input type="text" asp-for="AddressStreet" class="form-control" placeholder="Address Street">
                            <span asp-validation-for="AddressStreet" class="text-danger"></span>
                        </div>
                        <div class="required form-group col-md-6">
                            <label for="City">City</label>
                            <input type="text" asp-for="City" class="form-control" placeholder="City">
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="required form-group col-md-6">
                            <label for="State">State</label>
                            <input type="text" asp-for="State" class="form-control" placeholder="State">
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                        <div class="required form-group col-md-6">
                            <label asp-for="CCountry"></label>
                            <input type="text" asp-for="CCountry" class="form-control" placeholder="Country">
                            <span asp-validation-for="CCountry" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="Zip">Zip</label>
                            <input type="text" asp-for="Zip" class="form-control" placeholder="Zip">
                            <span asp-validation-for="Zip" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <div class="uplaodimage">
                                <div class="up-images">
                                    <label asp-for="ImageFile"></label>
                                    <input type="file" onchange="preview1()" asp-for="ImageFile" class="load-image form-control form-control-sm" />
                                </div>
                                <div class="preview-img">
                                    <img id="frame1" src="~/@Model.ImagePath" />

                                </div>
                            </div>
                        </div>
                    </div>
                    @if (@Model.Name == "Agent")
                    {
                        <div id="changeAgentTextFields">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="inputAddress">Organization Name</label>
                                    <input type="text" asp-for="OrganizationName" class="form-control" placeholder="Organization Name">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="inputDOB">Organization Address Street</label>
                                    <input type="text" asp-for="OrgAddressStreet" class="form-control" placeholder="Org Address Street">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="inputAddress">Organization City</label>
                                    <input type="text" asp-for="OrgCity" class="form-control" placeholder="Org City">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="inputDOB">Organization State</label>
                                    <input type="text" asp-for="OrgState" class="form-control" placeholder="Org State">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="inputAddress">Organization Zip</label>
                                    <input type="text" asp-for="OrgZip" class="form-control" placeholder="Org Zip">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="inputDOB">Organization Phone Number</label>
                                    <input type="text" asp-for="OrgPhoneNumber" class="form-control" placeholder="Org Phone Number">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="Facebook">Facebook</label>
                                    <input type="text" asp-for="Facebook" class="form-control" placeholder="Facebook">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="Twitter">Twitter</label>
                                    <input type="text" asp-for="Twitter" class="form-control" placeholder="Twitter">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label for="Instagram">Instagram</label>
                                    <input type="text" asp-for="Instagram" class="form-control" placeholder="Instagram">
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="LinkedIN">LinkedIN</label>
                                    <input type="text" asp-for="LinkedIN" class="form-control" placeholder="LinkedIN">
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="LicenseID">License ID</label>
                                    <input type="text" asp-for="LicenseID" class="form-control" placeholder="License ID">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-12">
                                    <label for="AboutUs">About Us</label>
                                    <textarea type="text" asp-for="AboutUs" class="form-control" rows="3" placeholder="About Us"></textarea>
                                </div>
                            </div>
                        </div>
                    }

                <div class="modal-footer">
                    <p id="error-msg-edit" class="text-danger"></p>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    @*<button type="button" class="btn btn-primary" id="btnUpdate">Update</button>*@
                    @if (Model.Name.ToLower() == "agent")
                    {
                        <button type="button" class="btn btn-primary" id="btnAgentUpdate">Update</button>
                    }
                    else
                    {
                        <button type="button" class="btn btn-primary" id="btnAdminUpdate">Update</button>
                    }

                </div>
                </form>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


<script>

    function preview1() {
        frame1.src = URL.createObjectURL(event.target.files[0]);
    }
</script>


