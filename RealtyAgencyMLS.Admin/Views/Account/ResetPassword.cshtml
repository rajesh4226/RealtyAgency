@model ResetPasswordModel

@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_Account.cshtml";
}

<div class="login-outer">
    <a href="#" class="login-logo"><img class="img-fluid" src="~/images/logo.png" /></a>
    <div class="login-panel">
        <h1>Reset your password</h1>
        <partial name="_StatusMessage" for="StatusMessage" />
        <form id="frmRegister" method="post" autocomplete="off">
            <input asp-for="Email" type="hidden" />
            <input asp-for="Code" type="hidden" />
            <fieldset class="form-group">
                <input type="Password" asp-for="Password" class="form-control" placeholder="Password">
                <img src="~/images/password.png" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </fieldset>
            <fieldset class="form-group">
                <input type="Password" asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password">
                <img src="~/images/password.png" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </fieldset>
            <fieldset class="form-group remember">
                <div class="logincheck">
                </div>
                <a asp-controller="Account" asp-action="Login">Log in now</a>
            </fieldset>
            <button type="submit" class="btn login-btn">Submit</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

