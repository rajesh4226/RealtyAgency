@model VehicleCreateModel

<div class="modal" tabindex="-1" role="dialog" id="createModal">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Vehicle </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="frmCreate" method="post">
                    <div class="form-row">
                        <div class="required form-group col-md-12 mb-3">
                            <label>Vehicle Type</label>
                            <select asp-for="VehicleTypeID" class="form-control" asp-items="@(new SelectList(@ViewBag.VehicleTypeList,"PID", "VehicleTypeName", @Model.VehicleTypeID))"></select>
                            <span asp-validation-for="VehicleTypeID" class="text-danger"></span>
                        </div>
                        <div class="required form-group col-md-12 mb-3">
                            <label>Company Name</label>
                            <select asp-for="CompanyID" class="form-control" asp-items="@(new SelectList(@ViewBag.CompanyList,"PID", "CompanyName", @Model.CompanyID))"></select>
                            <span asp-validation-for="CompanyID" class="text-danger"></span>
                        </div>

                        <div class="required form-group col-md-12 mb-3">
                            <label asp-for="VehicleName"></label>
                            <input asp-for="VehicleName" class="form-control form-control-sm" />
                            <span asp-validation-for="VehicleName" class="text-danger"></span>
                        </div>
                        <div class="required form-group col-md-12 mb-3">
                            <label asp-for="Price"></label>
                            <input asp-for="Price" class="form-control form-control-sm" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="required form-group col-md-12 mb-3">
                            <label asp-for="Description"></label>
                            <input asp-for="Description" class="form-control form-control-sm" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="required form-group col-md-6 mb-3">
                            <div class="uplaodimage">
                                <div class="up-images">
                                    <label >image</label>
                                    <input type="file" onchange="preview()" asp-for="ImageFile" class="load-image form-control form-control-sm" />
                                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                                </div>
                                <div class="preview-img">

                                    <img id="frame" src="~/images/user-icon.png" />

                                </div>
                            </div>
                        </div>


                    </div>
                    <div class="modal-footer">
                        <p id="error-msg-create" class="text-danger"></p>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary" id="btnCreate">Create</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<script>
    function preview() {
        frame.src = URL.createObjectURL(event.target.files[0]);
    }
</script>