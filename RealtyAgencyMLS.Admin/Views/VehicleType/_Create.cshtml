@model VehicleTypeCreateModel

<div class="modal" tabindex="-1" role="dialog" id="createModal">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Vehicle Type</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="frmCreate" method="post">
                    <div class="form-row">

                        <div class="form-group col-md-12 mb-3">
                            <label asp-for="VehicleTypeName"></label>
                            <input asp-for="VehicleTypeName" class="form-control form-control-sm" />
                            <span asp-validation-for="VehicleTypeName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <p id="error-msg-create" class="text-danger"></p>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary" id="btnCreate">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


