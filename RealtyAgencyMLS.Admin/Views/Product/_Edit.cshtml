@model ProductCreateModel

<div class="modal" tabindex="-1" role="dialog" id="editModal">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Product Blog</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="frmEdit" method="post">
                    <div class="form-row">
                        <input type="hidden" asp-for="PID" />
                        <div class="required form-group col-md-12 mb-3">
                            <label asp-for="CategoryID"></label>
                            <select asp-for="CategoryID" class="form-control" asp-items="@(new SelectList(@ViewBag.CategoryList,"PID", "CategoryName", @Model.CategoryID))"></select>
                            <span asp-validation-for="CategoryID" class="text-danger"></span>
                        </div>
                        <div class="required form-group col-md-12 mb-3">
                            <label asp-for="ProductName"></label>
                            <input asp-for="ProductName" class="form-control form-control-sm" />
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>
                        <div class="required form-group col-md-12 mb-3">
                            <label asp-for="Price"></label>
                            <input asp-for="Price" class="form-control form-control-sm" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="required form-group col-md-12 mb-3">
                            <label asp-for="MFG"></label>
                            <input asp-for="MFG" class="form-control form-control-sm" />
                            <span asp-validation-for="MFG" class="text-danger"></span>
                        </div>
                        <div class="required form-group col-md-12 mb-3">
                            <label asp-for="EXP"></label>
                            <input asp-for="EXP" class="form-control form-control-sm" />
                            <span asp-validation-for="EXP" class="text-danger"></span>
                        </div>
                        <div class="required form-group col-md-12 mb-3">
                            <label asp-for="Heading"></label>
                            <input asp-for="Heading" class="form-control form-control-sm" />
                            <span asp-validation-for="Heading" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <div class="uplaodimage">
                                <div class="up-images">
                                    <label asp-for="ImageFile"></label>
                                    <input type="file" onchange="preview1()" asp-for="ImageFile" class="load-image form-control form-control-sm" />
                                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                                </div>
                                <div class="preview-img">
                                    <img id="frame1" src="~/@Model.ImagePath" />
                                </div>
                            </div>
                        </div>
                        <div class="required form-group col-md-12 mb-3">
                            <label asp-for="Tags"></label>
                            <input asp-for="Tags" class="form-control form-control-sm" />
                            <span asp-validation-for="Tags" class="text-danger"></span>
                        </div>

                        <div class="required form-group col-md-12 mb-3">
                            <label asp-for="ShortDescription"></label>
                            <textarea asp-for="ShortDescription" rows="4" class="form-control form-control-sm"></textarea>
                            <span asp-validation-for="ShortDescription" class="text-danger"></span>
                        </div>
                        <div class="modal-footer">
                            <p id="error-msg-edit" class="text-danger"></p>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-primary" id="btnUpdate">Submit</button>
                        </div>
                        </div>
</form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script>
    function preview1() {
        frame1.src = URL.createObjectURL(event.target.files[0]);
    }
</script>
